{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./src",
        "paths": {
            "@interfaces/*": [
                "interfaces/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@db/*": [
                "db/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@jobs/*": [
                "jobs/*"
            ],
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": false,
    },
    "exclude": [
        "node_modules",
        "tests/",
        "jest.config.ts"
    ]
}